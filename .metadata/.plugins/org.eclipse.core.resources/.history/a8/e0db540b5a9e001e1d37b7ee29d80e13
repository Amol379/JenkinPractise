		List<Integer> collect = IntStream.of(arr).boxed().sorted((a, b) -> b.compareTo(a)).collect(Collectors.toList());
		System.out.println(collect);
		Stream<int[]> sorted = Arrays.asList(arr).stream().sorted((a, c) -> -1);

